page{
  background-color: white;
}
.rating_whole{
  width: 90%;
  margin-left: 5%;
  margin-top: 10%;
  align-self: center;
  display: flex;
  flex-direction: column;
  color: black;
}
.ride_description{
  width: 100%;
  height: 120rpx;
  background-color: lightgray;
}
.ride_description_text{
  margin-left: 30%;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}
.ride_finish{
  font-size: 30rpx;
}
.ride_time{
  margin-top: 3rpx;
  font-size: 25rpx;
}
.ride_driver{
  height: 400rpx;
  align-items: center;
  display: flex;
  flex-direction: column;
}
.driverInfo-avatar{
  margin-top: 100rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.driverInfo-name{
  margin-top: 25rpx;
  font-size: 30rpx;
}
.score{
  background-color: lightgray;
  height: 260rpx;
  width: 100%;
}
.score_text{
  font-size: 25rpx;
  margin-left: 30rpx;
}
.score_star{
  font-size: 40rpx;
  margin-top: 40rpx;
  text-align: center;
}
.star_hollow{
  color: darkgray;
}
.star_solid{
  color: darkslategray;
}