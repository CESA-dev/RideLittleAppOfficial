<view class="score">
  <text class="score_text">请你为本次顺风车打分:</text>
  <view class="score_star" bindtap="myStarChoose">
    <block wx:for="{{starMap}}">
      <text wx:if="{{star>=index+1}}" style="padding-right: .5em" class="star_solid" data-star="{{index+1}}">★</text>
      <text wx:if="{{star<index+1}}" style="padding-right: .5em" class="star_hollow" data-star="{{index+1}}">☆</text>
    </block>
  </view>
</view>